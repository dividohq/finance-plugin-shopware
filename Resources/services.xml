<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="dividoFinancePlugin.subscriber.templates" class="dividoFinancePlugin\Subscriber\UpdatePlans">
            <argument>%divido_finance_plugin.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>
        <service id="divido_finance_plugin.subscriber.templates" class="dividoFinancePlugin\Subscriber\ExtendOrder">
            <argument>%divido_finance_plugin.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>
        <service id="divido_finance_plugin.payment_service"
                 class="dividoFinancePlugin\Components\Finance\PaymentService">
        </service>
        <service id="divido_finance_plugin.order_service"
                 class="dividoFinancePlugin\Components\Finance\OrderService">
        </service>
        <service id="divido_finance_plugin.plans_service"
                 class="dividoFinancePlugin\Components\Finance\PlansService">
            <argument>%divido_finance_plugin.plugin_dir%</argument>
        </service>
        <service id="divido_finance_plugin.activate_service"
                 class="dividoFinancePlugin\Components\Finance\ActivateService">
        </service>
        <service id="divido_finance_plugin.refund_service"
                 class="dividoFinancePlugin\Components\Finance\RefundService">
        </service>
        <service id="divido_finance_plugin.cancel_service"
                 class="dividoFinancePlugin\Components\Finance\CancelService">
        </service>
        <service id="divido_finance_plugin.webhook_service"
                 class="dividoFinancePlugin\Components\Finance\WebhookService">
        </service>
        <!-- Register TemplateRegistration subscriber -->
        <service id="divido_finance_plugin.subscriber.template_registration" class="dividoFinancePlugin\Subscriber\TemplateRegistration">
            <argument>%divido_finance_plugin.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <tag name="shopware.event_subscriber"/>
        </service>
    </services>
</container>
